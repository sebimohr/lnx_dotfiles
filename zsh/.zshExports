# exports
export EDITOR='nvim'
export VISUAL='$EDITOR'

# Hyprshot default directory
export HYPRSHOT_DIR=/home/smohr/Pictures/Screenshots

# Add GPG-key to terminal config
export GPG_TTY=$(tty)

# Add bat as manpager
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export MANROFFOPT="-c"

# Add eza / ls completions
export PATH="/home/smohr/.config/eza/zsh:$PATH"

# Export system ssl certificates so pyhton uses them instead of its own
export REQUESTS_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt

